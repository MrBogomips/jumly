.class-diagram
  .element .icon
    float left
    min-width 120px
    background-color white
    .stereotype, .name 
      display block
      text-align center
    
    .stereotype 
      &before
        content '<<' 
      &after
        content '>>' 
    
    .name 
      margin 0.2em 0.5em 0.2em 0.5em
      font-weight bold
    
    .attrs, .methods 
      > * 
         display block
         margin 0px
         padding 0px
      
      border-top solid 2px #808080
      min-height 8px
    
    ul 
      -webkit-margin-before 0px
      -webkit-margin-after  0px
      -webkit-margin-start  0px
      -webkit-margin-end    0px
      -webkit-padding-start 0px
      padding-left 1em
      padding-right 1em
    
    margin-left 2px
    margin-bottom 2px
